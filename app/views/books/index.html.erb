<!--見出し-->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td> <%= link_to "show", book_path(book.id) %> </td>
        <td><a class="edit_31192" href="/books/31192/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_31192" rel="nofollow" data-method="delete" href="/books/31192">Destroy</a></td>
      </tr>
    <% end %>
    <tr>
      <td>リーダブルコード</td>
      <td>より良いコードを書くためのシンプルで実践的なテクニック</td>
      <td><a class="show_31192" href="/books/31192">Show</a></td>
      <td><a class="edit_31192" href="/books/31192/edit">Edit</a></td>
      <td><a data-confirm="Are you sure?" class="destroy_31192" rel="nofollow" data-method="delete" href="/books/31192">Destroy</a></td>
    </tr>
  </tbody>
</table>


<!--投稿フォーム-->
<h2>New book</h2>

<%= form_with model: @book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>